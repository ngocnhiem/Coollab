// Inspired by https://inspirnathan.com/posts/65-glow-shader-in-shadertoy/

INPUT float 'Strength';
INPUT float 'Stretch';

Float_PremultipliedA main(SignedDistance Shape)
{
    return vec2(pow(max(Shape / 'Stretch', 0.) + 1., -1. / 'Strength'));
}